#!/bin/bash
set -e

mysql -uroot -proot -e "SET @@lock_wait_timeout = 20;"
mysql -uroot -proot -e "SET FOREIGN_KEY_CHECKS=0;"
mysql -uroot -proot -e "UPDATE genericaccount SET genericaccount.imap_username = (SELECT account._raw_address FROM account WHERE genericaccount.id = account.id);"
mysql -uroot -proot -e "UPDATE genericaccount SET genericaccount.smtp_username = (SELECT account._raw_address FROM account WHERE genericaccount.id = account.id);"
mysql -uroot -proot -e "UPDATE genericaccount SET imap_password_id = password_id;"
mysql -uroot -proot -e "UPDATE genericaccount SET smtp_password_id = password_id;"